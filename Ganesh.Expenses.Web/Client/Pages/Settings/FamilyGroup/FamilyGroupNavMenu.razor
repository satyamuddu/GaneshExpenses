<MudList Clickable=true>
    <MudListItem Text="FamilyGroups" Icon="@Icons.Material.Outlined.List" Dense="true" Class="@GetClass("familygroupslist")"/>
    <MudListItem Href="pages/settings/addfamilygroup" Text="Add FamilyGroup" Icon="@Icons.Material.Outlined.Add" Dense="true" Class="@GetClass("addfamilygroup")"/>
</MudList>

@code {
    [Parameter] public string folder { get; set; }

    public string GetClass(string _folder)
    {
        if (folder == _folder)
        {
            return "my-2 rounded mud-primary-text";
        }
        else
        {
            return "my-2 rounded";
        }
    }
}
