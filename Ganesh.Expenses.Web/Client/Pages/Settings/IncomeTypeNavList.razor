@*<h3>IncomeTypeNavList</h3>*@

<MudList Clickable=true>
    <MudListItem Text="Income Types" Icon="@Icons.Material.Outlined.AccountBox" Dense="true" Class="@GetClass("incometypelist")"/>
    <MudListItem Href="pages/settings/addincometype" Text="Add Income Type" Icon="@Icons.Material.Outlined.Add" Dense="true" Class="@GetClass("addincometype")"/>
</MudList>

@code {
    [Parameter] public string folder { get; set; }

    public string GetClass(string _folder)
    {
        if (folder == _folder)
        {
            return "my-2 rounded mud-primary-text";
        }
        else
        {
            return "my-2 rounded";
        }
    }
}
