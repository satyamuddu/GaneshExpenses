<MudList Clickable=true>
    <MudListItem Text="Units" Icon="@Icons.Material.Outlined.AdUnits" Dense="true" Class="@GetClass("unitslist")"/>
    <MudListItem Href="pages/settings/addunit" Text="Add Unit" Icon="@Icons.Material.Outlined.Add" Dense="true" Class="@GetClass("addunit")"/>
</MudList>

@code {
    [Parameter] public string folder { get; set; }

    public string GetClass(string _folder)
    {
        if (folder == _folder)
        {
            return "my-2 rounded mud-primary-text";
        }
        else
        {
            return "my-2 rounded";
        }
    }
}
